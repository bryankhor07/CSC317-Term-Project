<main>
    <img src="/public/images/NewPost.png" alt="New Post Image" height="400" width="400">
    <form action="/posts/create" method="post" enctype="multipart/form-data">
        <h2 style="background-color: #efe5d0;">Post Image Form</h2>
        <label for="Title">Title</label>
        <br>
        <input type="text" name="title" placeholder="Title">
        <br>

        <label for="Description">Description</label>
        <br>
        <input type="text" name="description" placeholder="Description">
        <br>

        <label for="Image">Please input an image:</label>
        <input type="file" name="uploadImage">
        <br>

        <label for="Policy">I accept Acceptable Use Policy for uploading images</label>
        <input type="checkbox" name="Policy">
        <br>

        <button id="submit" type="submit">Post Image</button>
    </form>
</main>